<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/together"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitCenter"

        android:layout_gravity="center"
        android:textAlignment="center"
        android:src="@drawable/wiwe"
        android:textSize="80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:entries="@array/hobby1"
        android:contentDescription="하고 싶은 설명"/>



    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:entries="@array/hobby2"
        android:contentDescription="하고 싶은 설명"/>



    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:entries="@array/hobby3"
        android:contentDescription="하고 싶은 설명"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#54bebb"
        android:id="@+id/hobby_search"
        android:text="검색하기"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_hobby" />





</LinearLayout>