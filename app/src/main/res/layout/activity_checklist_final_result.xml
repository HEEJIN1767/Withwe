<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChecklistFinalResultActivity">

    <TextView
        android:id="@+id/check_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="검사 결과"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/teal_700"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FinalResult">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/userNicknameChecklistResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="user"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="의 검사 결과"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/checklist1_final_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="checklist1의 결과"
                android:layout_marginBottom="40dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/checklist2_final_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="checklist2의 결과"
                android:layout_marginBottom="40dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/checklist3_final_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="checklist3의 결과"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:textSize="15sp" >
            </TextView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>