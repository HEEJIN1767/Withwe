<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChecklistMainActivity">

    <TextView
        android:id="@+id/together"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="WiWe"
        android:background="#54bebb"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textSize="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/checklistButton1"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="체크리스트1"
            android:backgroundTint="@color/teal_700"
            android:padding="5dp"
            ></Button>

        <TextView
            android:id="@+id/checklistResult1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="체크리스트1의 결과를 보시겠습니까?"
            android:textSize="15sp" ></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/checklistButton2"
            android:text="체크리스트2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:backgroundTint="@color/teal_700"
            ></Button>

        <TextView
            android:id="@+id/checklistResult2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체크리스트2의 결과를 보시겠습니까?"
            android:textSize="15sp" ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/checklistButton3"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="체크리스트3"
            android:backgroundTint="@color/teal_700"
            android:padding="5dp"
            ></Button>

        <TextView
            android:id="@+id/checklistResult3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="체크리스트3의 결과를 보시겠습니까?"
            android:textSize="15sp"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/result"
            android:backgroundTint="@color/teal_700"
            android:text="결과"
            android:padding="5dp" ></Button>
    </LinearLayout>

</LinearLayout>