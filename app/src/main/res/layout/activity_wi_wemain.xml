<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LoginResponse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/together"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:text="WiWe"
            android:background="#54bebb"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/cklist"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:backgroundTint="#e9ecef"
                android:scaleType="fitCenter"
                android:contentDescription="하고 싶은 설명"
                android:layout_marginLeft="40dp"
                android:background="@drawable/round_button"
                android:src="@drawable/cklist" />

            <ImageButton
                android:id="@+id/hb"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:layout_marginLeft="70dp"
                android:backgroundTint="#e9ecef"
                android:background="@drawable/round_button"
                android:contentDescription="하고 싶은 설명"
                android:src="@drawable/hb"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/cal"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#e9ecef"
                android:background="@drawable/round_button"
                android:contentDescription="하고 싶은 설명"
                android:scaleType="fitCenter"
                android:src="@drawable/cd" />
            <ImageButton
                android:id="@+id/cm"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/round_button"
                android:contentDescription="하고 싶은 설명"
                android:backgroundTint="#e9ecef"
                android:src="@drawable/cm"
                android:scaleType="fitCenter" />
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="4"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="하고 싶은 설명"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/homebtn" />


            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/mypg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="하고 싶은 설명"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mypage" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

