<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/together"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="#54bebb"
            android:text="WiWe"
            android:textAlignment="center"
            android:textSize="80dp" />

        <TextView
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#D3D3D3"
            android:text="회원가입"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="E-mail" />

            <EditText
                android:id="@+id/ret_id"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:hint="이메일을 입력해주세요."
                android:inputType="textEmailAddress"
                android:textSize="20dp" />






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paaword"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="PASS\nWORD" />

            <EditText
                android:id="@+id/ret_pw"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:hint="비밀번호를 입력해주세요."
                android:inputType="textPassword"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paaword2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="PASS\nWORD" />

            <EditText
                android:id="@+id/ret_pw2"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:hint="비밀번호를 입력해주세요."
                android:inputType="textPassword"
                android:textSize="20dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="확인"
                android:backgroundTint="#54bebb"
                android:id="@+id/pwch"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="닉네임" />

            <EditText
                android:id="@+id/et_nick"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:hint="닉네임을 입력해주세요."
                android:inputType="textPersonName"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/birth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="생년\n월일" />

            <EditText
                android:id="@+id/et_birth"
                android:layout_width="265dp"
                android:layout_height="70dp"
                android:ems="20"
                android:hint="생년월일을 입력해주세요."
                android:inputType="textPersonName"
                android:textSize="20dp" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#54bebb"
            android:text="회원가입"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>