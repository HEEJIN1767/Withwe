<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChecklistB13Activity">

    <ImageView
        android:id="@+id/together"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:src="@drawable/wiwe"
        android:textSize="80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/check_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="13/13"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="#E6626565"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/check_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" 주변 사람들이 자꾸 못마땅하게 느껴집니까?"
        android:padding="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rg2_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp">

        <RadioButton
            android:id="@+id/rb2m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 아니오 "
            android:padding="15dp"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/rb2m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 예 "
            android:padding="15dp"
            android:textSize="20sp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btn2_next_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="다음"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:backgroundTint="@color/teal_700"/>

</LinearLayout>