<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChecklistA3Activity">

    <ImageView
        android:id="@+id/together"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:src="@drawable/wiwe"
        android:textSize="80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/check_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="3/11"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/teal_700"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/check_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" 잠이 드는 것이 어렵고 \n일찍 일어 나는 것이 힘이 든다."
        android:padding="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rg_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp">

        <RadioButton
            android:id="@+id/rbc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="없음 (0)"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/rbc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약간 (1)"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/rbc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보통 (2)"
            android:textSize="20sp"

            />

        <RadioButton
            android:id="@+id/rbc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약간 심함 (3)"
            android:textSize="20sp"
            />

        <RadioButton
            android:id="@+id/rbc5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아주 심함 (4)"
            android:textSize="20sp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btn_next_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="다음"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:backgroundTint="@color/teal_700"/>

</LinearLayout>